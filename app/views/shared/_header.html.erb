<header class="bg-beige" data-controller="header">
  <div class="mx-auto px-4 py-6 flex justify-between items-center">
  <!-- justify-betweenで要素を左右に分ける -->
    <%= link_to root_path do %>
      <h1 class="text-brown text-lg" >Senior dog hub</h1>
    <% end %>
 <!-- ハンバーガーメニュー -->
    <nav class="text-brown">
      <button data-action ="click->header#toggleMenu" type="button" class="fixed z-10 top-0 right-1">
        <i data-header-target="bars" class="fa-solid fa-bars fa-2x"></i>
        <i data-header-target="xmark" class="fa-solid fa-xmark fa-2x hidden"></i>
      </button>
      <ul data-header-target="menu" class="fixed top-0 right-0 bg-ivory translate-x-full">
        <li class="p-2"><%= link_to 'トップ', root_path %></li>
        <li class="p-2"><%= link_to 'ユーザー登録' %></li>
        <li class="p-2"><%= link_to '質問一覧' %></li>
        <li class="p-2"><%= link_to 'つぶやき一覧' %></li>
        <li class="p-2"><%= link_to 'ログイン' %></li>
      </ul>
    </nav>
  </div>

</header>