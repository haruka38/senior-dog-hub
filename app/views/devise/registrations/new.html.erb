<h2 class="text-brown text-2xl font-bold text-center my-6">新規登録</h2>

<div class="flex justify-center text-center">
  <div class="rounded-2xl p-8 w-full max-w-md text-center border-4 border-beige">

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="field mb-4">
        <%= f.label :name, "名前", class: "text-light-brown block mb-1 text-left" %>
        <%= f.text_field :name,
              class: "w-full border border-light-brown rounded-md p-2 focus:outline-none focus:ring-2 focus:ring-beige mb-4" %>
      </div>

      <div class="field mb-4">
        <%= f.label :email, "メールアドレス", class: "text-light-brown block mb-1 text-left" %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email",
              class: "w-full border border-light-brown rounded-md p-2 focus:outline-none focus:ring-2 focus:ring-beige mb-4" %>
      </div>

      <div class="field mb-4">
        <%= f.label :password, class: "text-light-brown block mb-1 text-left" do %>
          パスワード
          <% if @minimum_password_length %>
            （<%= @minimum_password_length %>文字以上）
          <% end %>
        <% end %>
        
        <%= f.password_field :password, autocomplete: "new-password",
              class: "w-full border border-light-brown rounded-md p-2 focus:outline-none focus:ring-2 focus:ring-beige mb-4" %>
      </div>

      <div class="field mb-4">
        <%= f.label :password_confirmation, "パスワード（確認用）", class: "text-light-brown block mb-1 text-left" %>
        <%= f.password_field :password_confirmation, autocomplete: "new-password",
              class: "w-full border border-light-brown rounded-md p-2 focus:outline-none focus:ring-2 focus:ring-beige mb-6" %>
      </div>

      <div class="actions">
        <%= f.submit "新規登録", class: "bg-beige text-white rounded px-4 py-2 mb-4 font-bold" %>
      </div>
    <% end %>
  </div>
</div>
